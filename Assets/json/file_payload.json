{
  "title": "File Payload",
  "$schema": "file_payload.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "name": {
      "type": "string",
      "title": "File name",
      "options": {
        "infoText": "The file name. Supports tokens {{date}}, {{time}}, {{count}} and {{test}}. Extension will be added automatically based on the type desired and compression."
      },
      "default": "Contacts-{{date}}-{{time}}-{{count}}{{test}}"
    },
    "type": {
      "title": "File type",
      "oneOf": [
        {
          "title": "CSV (default)",
          "type": "object",
          "format": "grid",
          "options": {
            "collapsed": false,
            "disable_collapse": true
          },
          "properties": {
            "delimiter": {
              "type": "string",
              "title": "CSV Delimiter",
              "default": ",",
              "enumSource": [
                {
                  "source": [
                    {
                      "value": ",",
                      "title": "Commas (default)"
                    },
                    {
                      "value": "\\t",
                      "title": "Tabs"
                    },
                    {
                      "value": ";",
                      "title": "Semicolons"
                    },
                    {
                      "value": " ",
                      "title": "Spaces"
                    }
                  ],
                  "title": "{{item.title}}",
                  "value": "{{item.value}}"
                }
              ]
            },
            "enclosure": {
              "type": "string",
              "title": "CSV Enclosure character",
              "default": "\"",
              "enumSource": [
                {
                  "source": [
                    {
                      "value": "\"",
                      "title": "Double-quotes (default)"
                    },
                    {
                      "value": "'",
                      "title": "Single-quotes"
                    }
                  ],
                  "title": "{{item.title}}",
                  "value": "{{item.value}}"
                }
              ]
            },
            "escape": {
              "type": "string",
              "title": "CSV escape character",
              "default": "\\",
              "enumSource": [
                {
                  "source": [
                    {
                      "value": "\\",
                      "title": "Backslash (default)"
                    },
                    {
                      "value": "\"",
                      "title": "Double-quotes"
                    }
                  ],
                  "title": "{{item.title}}",
                  "value": "{{item.value}}"
                }
              ]
            },
            "terminate": {
              "type": "string",
              "title": "CSV line termination",
              "default": "\\n",
              "enumSource": [
                {
                  "source": [
                    {
                      "value": "\\n",
                      "title": "NewLine (default)"
                    },
                    {
                      "value": "\\r\\n",
                      "title": "Return and NewLine (Windows)"
                    },
                    {
                      "value": "\\r",
                      "title": "Return"
                    }
                  ],
                  "title": "{{item.title}}",
                  "value": "{{item.value}}"
                }
              ]
            },
            "null": {
              "type": "string",
              "title": "CSV empty value treatment",
              "default": "",
              "enumSource": [
                {
                  "source": [
                    {
                      "value": "",
                      "title": "Empty (default)"
                    },
                    {
                      "value": "NULL",
                      "title": "NULL"
                    }
                  ],
                  "title": "{{item.title}}",
                  "value": "{{item.value}}"
                }
              ]
            }
          }
        },
        {
          "title": "Excel 2007",
          "type": "string",
          "default": "Excel2007",
          "options": {
            "hidden": true
          }
        }
      ]
    },
    "compression": {
      "title": "Compression",
      "type": "string",
      "default": "zip",
      "options": {
        "infoText": "It is strongly advised that a form of compression is chosen."
      },
      "enumSource": [
        {
          "source": [
            {
              "value": "zip",
              "title": "ZIP (default)"
            },
            {
              "value": "gzip",
              "title": "GZIP"
            },
            {
              "value": "none",
              "title": "None (not advised)"
            }
          ],
          "title": "{{item.title}}",
          "value": "{{item.value}}"
        }
      ]
    },
    "headers": {
      "title": "Include Headers",
      "type": "boolean",
      "format": "checkbox",
      "default": true,
      "options": {
        "infoText": "Headers will be sent based on the field keys provided below."
      }
    },
    "empty": {
      "title": "Send even if empty",
      "type": "boolean",
      "format": "checkbox",
      "options": {
        "infoText": "A file will be sent even if there are no contacts to send. The file will be blank."
      },
      "default": false
    },
    "body": {
      "title": "Fields",
      "type": "array",
      "format": "table",
      "uniqueItems": true,
      "options": {
        "collapsed": false,
        "disable_collapse": true,
        "disable_array_reorder": true
      },
      "items": {
        "title": "Field",
        "$ref": "#/definitions/requestField"
      }
    },
    "methods": {
      "title": "Delivery Methods",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties" : {
        "email": {
          "title": "Email",
          "default": false,
          "oneOf": [
            {
              "title": "Disabled",
              "type": "boolean",
              "format": "checkbox",
              "default": false,
              "options": {
                "disabled": true
              }
            },
            {
              "title": "Enabled",
              "type": "object",
              "format": "grid",
              "options": {
                "collapsed": false,
                "disable_collapse": true
              },
              "properties": {
                "to": {
                  "title": "To Address/s",
                  "type": "string",
                  "options": {
                    "infoText": "Comma-delimited list of email addresses to send the file to.",
                    "notBlank": true,
                    "placeholder": "someone@someplace.com, someoneelse@anotherplace.com"
                  }
                },
                "test": {
                  "title": "To Address/s (test only)",
                  "type": "string",
                  "options": {
                    "infoText": "Comma-delimited list of email addresses to send a test file to.",
                    "placeholder": "someone@someplace.com, someoneelse@anotherplace.com"
                  }
                },
                "successMessage": {
                  "title": "Success Message",
                  "type": "string",
                  "format": "textarea",
                  "options": {
                    "infoText": "Optional custom message to send when the file creation is successful."
                  }
                },
                "emptyMessage": {
                  "title": "Empty Message",
                  "type": "string",
                  "format": "textarea",
                  "options": {
                    "infoText": "Optional custom message to send when the file creation process comes up with no contacts to send."
                  }
                }
              }
            }
          ]
        },
        "ftp": {
          "title": "FTP",
          "default": false,
          "oneOf": [
            {
              "title": "Disabled",
              "type": "boolean",
              "format": "checkbox",
              "default": false,
              "options": {
                "hidden": true,
                "disabled": true
              }
            },
            {
              "title": "Enabled",
              "type": "object",
              "format": "grid",
              "options": {
                "collapsed": false,
                "disable_collapse": true
              },
              "properties": {
                "host": {
                  "title": "Host",
                  "type": "string",
                  "options": {
                    "notBlank": true,
                    "placeholder": "ftp://ftp.someserver.com"
                  }
                },
                "user": {
                  "title": "Username",
                  "type": "string",
                  "options": {
                    "notBlank": true
                  }
                },
                "pass": {
                  "title": "Password",
                  "type": "string"
                },
                "folder": {
                  "title": "Folder",
                  "type": "string",
                  "options": {
                    "infoText": "Optionally specify a folder beneath the login path to upload files."
                  }
                },
                "testFolder": {
                  "title": "Test Folder",
                  "type": "string",
                  "options": {
                    "infoText": "Optionally specify a folder to upload files to during tests."
                  }
                }
              }
            }
          ]
        }
      }
    }
  },
  "definitions": {
    "requestField": {
      "title": "Field",
      "headerTemplate": "{{ self.key }}",
      "type": "object",
      "options": {
        "collapsed": false,
        "disable_collapse": false
      },
      "properties": {
        "key": {
          "propertyOrder": 10,
          "type": "string",
          "title": "Key",
          "options": {
            "infoText": "The name of the field being sent."
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        },
        "value": {
          "propertyOrder": 20,
          "type": "string",
          "title": "Value",
          "options": {
            "#comment": "These token properties are not standard, and only exist in this plugin.",
            "tokenSource": "plugin:mauticContactClient:getTokens",
            "tokenPlaceholder": "Type a field name...",
            "infoText": "The value of the field being sent."
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        },
        "default_value": {
          "propertyOrder": 30,
          "type": "string",
          "title": "Default Value",
          "options": {
            "hidden": true,
            "infoText": "An optional value that will be used if the value field renders as blank."
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        },
        "test_value": {
          "propertyOrder": 40,
          "type": "string",
          "title": "Test Value",
          "options": {
            "infoText": "An optional value to override other values during test requests."
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        },
        "required": {
          "propertyOrder": 50,
          "type": "boolean",
          "format": "checkbox",
          "title": "Required",
          "options": {
            "infoText": "Set to true to prevent sending contacts to this client if this field is empty."
          },
          "default": false
        },
        "overridable": {
          "propertyOrder": 60,
          "type": "boolean",
          "format": "checkbox",
          "title": "Overridable",
          "options": {
            "infoText": "Allow this field to be overridden within a campaign workflow."
          },
          "default": false
        },
        "test_only": {
          "propertyOrder": 70,
          "type": "boolean",
          "format": "checkbox",
          "title": "Test Only",
          "options": {
            "infoText": "Set to true to only send this field when running a test."
          },
          "default": false
        },
        "description": {
          "propertyOrder": 80,
          "type": "string",
          "title": "Description",
          "options": {
            "infoText": ""
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        }
      }
    }
  }
}