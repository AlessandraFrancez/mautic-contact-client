{
  "title": "Revenue Settings",
  "$schema": "revenue.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "dynamic": {
      "title": "Cost/Revenue is ",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "default": true,
      "oneOf": [
        {
          "title": "Static",
          "type": "boolean",
          "format": "checkbox",
          "default": true,
          "options": {
            "disabled": true
          }
        },
        {
          "title": "Dynamic (Determined by API)",
          "properties": {
            "key": {
              "title": "Key",
              "type": "string",
              "uniqueItems": true,
              "enum": [
                "cat",
                "dog",
                "bird",
                "reptile",
                "other"
              ],
              "options": {
                "infoText": "Select a field/key being sent by an API response to be used for revenue. This can come to us by way of a header or a footer field."
              }
            },
            "treatment": {
              "title": "Treatment",
              "type": "string",
              "uniqueItems": true,
              "enum": [
                "Revenue",
                "Cost"
              ],
              "options": {
                "infoText": "Should we treat the value from the API as a positive number (revenue) or a negative number (cost)."
              }
            },
            "modification": {
              "title": "Modification",
              "type": "string",
              "uniqueItems": true,
              "enum": [
                "None",
                "Multiply by 100",
                "Divide by 100"
              ],
              "options": {
                "infoText": "Should it be needed we can modify the value from the API to match your standard currency notation of choice."
              }
            }
          }
        }
      ]
    }
  }
}