{
  "title": "Field Overrides",
  "$schema": "overrides.json",
  "type": "array",
  "format": "table",
  "options": {
    "disable_collapse": true
  },
  "items": {
    "title": "Field",
    "$ref": "#/definitions/requestField"
  },
  "definitions": {
    "requestField": {
      "title": "Field",
      "headerTemplate": "{{ self.key }}",
      "type": "object",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "key": {
          "propertyOrder": 10,
          "type": "string",
          "title": "Key",
          "options": {
            "infoText": "The name of the field being sent."
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        },
        "value": {
          "propertyOrder": 20,
          "type": "string",
          "title": "Value",
          "options": {
            "#comment": "These token properties are not standard, and only exist in this plugin.",
            "tokenSource": "plugin:mauticContactClient:getTokens",
            "tokenPlaceholder": "Type a field name...",
            "infoText": "The value of the field being sent."
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        },
        "enabled": {
          "title": "Enabled",
          "propertyOrder": 15,
          "type": "boolean",
          "format": "checkbox",
          "default": false,
          "options": {
            "infoText": "Enable to override the value within this campaign. Disable to use the default values configured for the client."
          }
        },
        "description": {
          "propertyOrder": 30,
          "type": "string",
          "title": "Description",
          "options": {
            "infoText": ""
          },
          "default": "",
          "minLength": 0,
          "maxLength": 255
        }
      }
    }
  }
}