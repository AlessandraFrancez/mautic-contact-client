{
  "title": "Exclusivity Settings",
  "$schema": "exclusivity.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "rules": {
      "title": "Exclusivity Rules",
      "type": "array",
      "format": "table",
      "uniqueItems": true,
      "options": {
        "disable_collapse": true
      },
      "items": {
        "title": "Rule",
        "$ref": "#/definitions/cacheField"
      }
    }
  },
  "definitions": {
    "cacheField": {
      "headerTemplate": "{{ self.scope }}",
      "type": "object",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "matching": {
          "title": "Contact Matching",
          "propertyOrder": 10,
          "type": "integer",
          "default": 1,
          "options": {
            "infoText": "You can make the exclusivity rule apply to the explicit contact in question, or to all contacts that are similar based on some select fields."
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "Unique contacts"
                },
                {
                  "value": 2,
                  "title": "Contacts matching email"
                },
                {
                  "value": 4,
                  "title": "Contacts matching home phone"
                },
                {
                  "value": 8,
                  "title": "Contacts matching mobile phone"
                },
                {
                  "value": 16,
                  "title": "Contacts matching address"
                }
              ],
              "title": "{{ item.title }}",
              "value": "{{ item.value }}"
            }
          ]
        },
        "scope": {
          "title": "Scope",
          "propertyOrder": 20,
          "type": "integer",
          "default": "global",
          "options": {
            "infoText": "How wide do you want this exclusivity to reach."
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "are to be exclusive globally"
                },
                {
                  "value": 2,
                  "title": "are to be exclusive per client category"
                }
              ],
              "title": "{{ item.title }}",
              "value": "{{ item.value }}"
            }
          ]
        },
        "duration": {
          "title": "Duration",
          "propertyOrder": 30,
          "type": "integer",
          "options": {
            "infoText": "Specify how long this exclusivity rule should last, before expiring and allowing the contact to go to other clients within the scope."
          },
          "default": 86400,
          "enumSource": [
            {
              "source": [
                {
                  "value": 3600,
                  "title": "for 1 Hour"
                },
                {
                  "value": 21600,
                  "title": "for 6 Hours"
                },
                {
                  "value": 43200,
                  "title": "for 12 Hours"
                },
                {
                  "value": 86400,
                  "title": "for 1 Day"
                },
                {
                  "value": 172800,
                  "title": "for 2 Days"
                },
                {
                  "value": 259200,
                  "title": "for 3 Days"
                },
                {
                  "value": 345600,
                  "title": "for 4 Days"
                },
                {
                  "value": 432000,
                  "title": "for 5 Days"
                },
                {
                  "value": 518400,
                  "title": "for 6 Days"
                },
                {
                  "value": 604800,
                  "title": "for 1 Week"
                },
                {
                  "value": 1209600,
                  "title": "for 2 Weeks"
                },
                {
                  "value": 1814400,
                  "title": "for 3 Weeks"
                },
                {
                  "value": 2592000,
                  "title": "for 30 Days"
                }
              ],
              "title": "{{ item.title }}",
              "value": "{{ item.value }}"
            }
          ]
        }
      }
    }
  }
}