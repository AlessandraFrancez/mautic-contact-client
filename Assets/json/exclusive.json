{
  "title": "Exclusivity Settings",
  "$schema": "exclusivity.json",
  "type": "object",
  "format": "grid",
  "options": {
    "disable_collapse": true
  },
  "properties": {
    "rules": {
      "title": "Exclusivity Rules",
      "type": "array",
      "format": "table",
      "uniqueItems": true,
      "options": {
        "disable_collapse": true
      },
      "items": {
        "title": "Rule",
        "$ref": "#/definitions/cacheField"
      }
    }
  },
  "definitions": {
    "cacheField": {
      "headerTemplate": "{{self.scope}}",
      "type": "object",
      "options": {
        "collapsed": false,
        "disable_collapse": true
      },
      "properties": {
        "matching": {
          "title": "Contact Matching",
          "propertyOrder": 10,
          "default": 1,
          "options": {
            "infoText": "You can make the exclusivity rule apply to the explicit contact in question, or to all contacts that are similar based on some select fields."
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "Unique contacts"
                },
                {
                  "value": 2,
                  "title": "Contacts matching email"
                },
                {
                  "value": 4,
                  "title": "Contacts matching home phone"
                },
                {
                  "value": 8,
                  "title": "Contacts matching mobile phone"
                },
                {
                  "value": 16,
                  "title": "Contacts matching address"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        },
        "scope": {
          "title": "Scope",
          "propertyOrder": 20,
          "default": 1,
          "options": {
            "infoText": "How wide do you want this exclusivity to reach."
          },
          "enumSource": [
            {
              "source": [
                {
                  "value": 1,
                  "title": "are to be exclusive globally"
                },
                {
                  "value": 2,
                  "title": "are to be exclusive per client category"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        },
        "duration": {
          "title": "Duration",
          "propertyOrder": 30,
          "type": "string",
          "options": {
            "infoText": "Specify how long this exclusivity rule should last, before expiring and allowing the contact to go to other clients within the scope."
          },
          "default": "P1D",
          "enumSource": [
            {
              "source": [
                {
                  "value": "PT1H",
                  "title": "for 1 Hour"
                },
                {
                  "value": "PT6H",
                  "title": "for 6 Hours"
                },
                {
                  "value": "PT12H",
                  "title": "for 12 Hours"
                },
                {
                  "value": "P1D",
                  "title": "for 1 Day"
                },
                {
                  "value": "P2D",
                  "title": "for 2 Days"
                },
                {
                  "value": "P3D",
                  "title": "for 3 Days"
                },
                {
                  "value": "P4D",
                  "title": "for 4 Days"
                },
                {
                  "value": "P5D",
                  "title": "for 5 Days"
                },
                {
                  "value": "P6D",
                  "title": "for 6 Days"
                },
                {
                  "value": "P1W",
                  "title": "for 1 Week"
                },
                {
                  "value": "P2W",
                  "title": "for 2 Weeks"
                },
                {
                  "value": "P3W",
                  "title": "for 3 Weeks"
                },
                {
                  "value": "P30D",
                  "title": "for 30 Days"
                }
              ],
              "title": "{{item.title}}",
              "value": "{{item.value}}"
            }
          ]
        }
      }
    }
  }
}